<div class="player-hub-content">
    <div class="existing-chats">
        <h4>Your Conversations</h4>
        <div class="conversation-list">
            {{#each conversations}}
            <label class="item-label">
                <input type="radio" name="selectedConversation" class="conversation-checkbox" 
                       data-conversation-id="{{this.id}}" data-type="{{this.type}}">
                <i class="fas {{this.icon}}"></i>
                <span>{{this.name}}</span>
            </label>
            {{else}}
            <p class="notes">You are not in any conversations yet.</p>
            {{/each}}
        </div>
        <div class="actions">
            <button type="button" data-action="openSelected">
                <i class="fas fa-folder-open"></i> Open Selected
            </button>
        </div>
    </div>

    <div class="create-new-chat">
        <h4>Start a New Chat</h4>
        <div class="form-group">
            <label>Group Name (optional)</label>
            <input type="text" name="newGroupName" placeholder="For group chats only...">
        </div>
        <label>Select Members</label>
        <div class="user-list">
            {{#each users}}
            <label class="item-label">
                <input type="checkbox" class="user-checkbox" value="{{this.id}}">
                <span class="user-name">{{this.name}}</span>
                {{#if this.isGM}}
                    <span class="user-badge gm-badge">GM</span>
                {{/if}}
                {{#if this.isOnline}}
                    <span class="user-badge online-badge" title="Online">●</span>
                {{else}}
                    <span class="user-badge offline-badge" title="Offline">○</span>
                {{/if}}
            </label>
            {{else}}
            <p class="notes">No other users available.</p>
            {{/each}}
        </div>
        <div class="actions">
            <button type="button" data-action="createGroup">
                <i class="fas fa-plus"></i> Create Chat
            </button>
        </div>
    </div>
</div>